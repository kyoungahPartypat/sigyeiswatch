extends ../layout

block head
  link(rel = "stylesheet" href = "/stylesheets/users.css")

block content
  div(id = "login" class = "row")
    h2 로그인
    div(class = "col-md-4 col-md-offset-4")
      div.account-wall
        form(method = "post" class = "form-signin")
          input(type = "email" name = "email" class = "form-control" id = "inputEmail" placeholder = "이메일")
          input(type = "password" name = "password" class = "form-control" id = "inputPassword3" placeholder = "비밀번호")

          if message.length > 0
            span.error #{message}
          button(type = "submit" class = "btn btn-lg btn-primary btn-block") 로그인
          button(type = "button" class = "btn btn-default" onclick = "location.href='/users/auth/facebook'") 페이스북 로그인
      <a href = "join" class  = "text-center new-account">회원가입
